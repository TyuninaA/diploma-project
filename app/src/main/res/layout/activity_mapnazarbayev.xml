<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/undergroundNazarbayev"
        android:layout_width="108dp"
        android:layout_height="71dp"
        android:layout_marginTop="120dp"
        android:text="Underground floor"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/firstNazarbayev"
        android:layout_width="108dp"
        android:layout_height="71dp"
        android:text="First Floor"
        android:textSize="8sp"
        app:layout_constraintTop_toBottomOf="@+id/undergroundNazarbayev"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="303dp" />

    <Button
        android:id="@+id/secondNazarbayev"
        android:layout_width="108dp"
        android:layout_height="71dp"
        android:text="Second Floor"
        android:textSize="8sp"
        app:layout_constraintTop_toBottomOf="@+id/firstNazarbayev"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="388dp" />

    <Button
        android:id="@+id/thirdNazarbayev"
        android:layout_width="108dp"
        android:layout_height="71dp"
        android:text="Third Floor"
        android:textSize="8sp"
        app:layout_constraintTop_toBottomOf="@+id/secondNazarbayev"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="474dp" />

    <Button
        android:id="@+id/fourthNazarbayev"
        android:layout_width="108dp"
        android:layout_height="71dp"
        android:text="Fourth Floor"
        android:textSize="8sp"
        app:layout_constraintTop_toBottomOf="@+id/thirdNazarbayev"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="474dp" />

    <Button
        android:id="@+id/fifthNazarbayev"
        android:layout_width="108dp"
        android:layout_height="71dp"
        android:text="Fifth Floor"
        android:textSize="8sp"
        app:layout_constraintTop_toBottomOf="@+id/fourthNazarbayev"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="474dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="115dp"
        android:layout_height="417dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/canteen_nazarbayev" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="#D9D9D9"
        android:text="Map Nazarbayev"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/floorNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>