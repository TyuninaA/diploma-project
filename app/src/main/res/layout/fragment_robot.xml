<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Robot">

    <!-- Основание джойстика -->
    <ImageView
        android:id="@+id/joystick_base"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/yaogan"
        android:scaleType="fitCenter" />

    <!-- Ручка джойстика -->
    <ImageView
        android:id="@+id/joystick_handle"
        android:layout_width="156dp"
        android:layout_height="328dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/stick2" />

    <TextView
        android:id="@+id/coordinates_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:background="@android:color/white"
        android:layout_marginTop="200dp"
        android:visibility="visible"
        android:text="Vertical: 0, Horizontal: 0" />

    <!-- Кнопка "Connect to Robot" -->
    <Button
        android:id="@+id/connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="90dp"
        android:text="Connect to Robot" />

    <!-- Надпись "Status" -->
    <TextView
        android:id="@+id/status_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="70dp"
        android:text="Status:" />

</FrameLayout>
