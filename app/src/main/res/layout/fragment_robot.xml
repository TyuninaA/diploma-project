<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Robot">

    <!-- Основание джойстика
    <ImageView
        android:id="@+id/joystick_base"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/yaogan"
        android:scaleType="fitCenter" />

    Ручка джойстика
    <ImageView
        android:id="@+id/joystick_handle"
        android:layout_width="156dp"
        android:layout_height="328dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/stick2" />

    <TextView
        android:id="@+id/coordinates_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:background="@android:color/white"
        android:layout_marginTop="200dp"
        android:visibility="visible"
        android:text="Vertical: 0, Horizontal: 0" />
    -->

    <!-- Кнопка "Connect to Robot" -->
    <Button
        android:id="@+id/connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="90dp"
        android:text="Connect to Robot" />

    <!-- Надпись "Status" -->
    <Button
        android:id="@+id/buttonForward"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="150dp"
        android:text="Go"
        android:background="@drawable/round_button" />

    <Button
        android:id="@+id/buttonBackward"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="100dp"
        android:text="Back"
        android:background="@drawable/round_button" />

    <!--
        <Button
            android:id="@+id/buttonStay"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="95dp"
            android:text="Stay" />
    -->
    <Button
        android:id="@+id/buttonLeft"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="95dp"
        android:text="Left"
        android:background="@drawable/round_button" />

    <Button
        android:id="@+id/buttonRight"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="95dp"
        android:text="Right"
        android:background="@drawable/round_button" />

</FrameLayout>
